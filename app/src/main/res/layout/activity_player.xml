<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient3rd"
    tools:context=".playerActivity">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBTN"
        android:layout_gravity="start"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/baseline_keyboard_arrow_down_24"/>

    <TextView
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Playing From Library"
        android:textAlignment="center"
        android:textColor="#0D0000"
        android:textSize="20dp"
        android:textStyle="bold"/>
</androidx.appcompat.widget.Toolbar>

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="20dp">
    <TextView
        android:id="@+id/LibName"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alan Walker"
        android:textAlignment="center"
        android:textColor="#363434"
        android:textSize="17dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />
</androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#090909"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/songName"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="song"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AddToLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_cloud_download_24"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="status"
        android:textColor="#CCCCCC"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:max="100"
        android:progressDrawable="@drawable/seekbar_style"
        android:thumb="@drawable/custom_thumb"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/StartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/TimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_gravity="end"
            android:textColor="#FFFFFF"
            android:layout_marginRight="30dp"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="30dp"
            android:background="@drawable/baseline_fast_rewind_24"
            android:backgroundTint="#FFFFFF"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/playBTN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_pause_circle_24"
            android:backgroundTint="#FFFFFF"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_fast_forward_24"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"/>
    </androidx.appcompat.widget.Toolbar>
</LinearLayout>