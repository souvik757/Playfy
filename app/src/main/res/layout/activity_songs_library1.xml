<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".songs_library_activity1">


    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/new_bg_2_alan"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="Alan Walker"
        android:textColor="#FEFFFF"
        android:textSize="35dp"
        android:textStyle="bold"/>
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:id="@+id/TotalListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="8 items"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="normal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LikeBTN"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_favorite_border_24"
        android:backgroundTint="#C2BEE2" />
</androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient6th">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="monospace"
            android:text="last song played "
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastSong"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Spectre"
            android:textColor="#FBFF03"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_recycler_view_1st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>