<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/_liked_songs_bg"
    tools:context=".songs_library_activity4">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/_back_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"/>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:text="Liked Songs"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient6th">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="monospace"
            android:text="Last played "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/_lastsong_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Last played "
            android:textColor="#FFD600"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/_recycler_liked_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>