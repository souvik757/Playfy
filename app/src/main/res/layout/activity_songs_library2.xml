<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient5th"
    tools:context=".songs_library_activity2"
    android:orientation="vertical">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="start"
        android:src="@drawable/arash_1"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="20dp"
        android:text="Arash"
        android:textColor="#FEFFFF"
        android:textSize="35dp"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="end"
        android:layout_marginRight="68dp"
        android:layout_marginTop="164dp"
        android:id="@+id/LikeBTN"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_favorite_border_24"
        android:backgroundTint="#AA00FF"/>
</androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient6th">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="monospace"
            android:text="last song played "
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lastSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Spectre"
            android:textColor="#FBFF03"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_recycler_view_1st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>